<h1>For rent</h1>

<ul>
  <% @pieces.each do |piece| %>
    <li><%= link_to piece.name, piece_path(piece) %></li>
  <% end %>
</ul>

<div data-controller="toggle" class="mt-5">
  <div data-toggle-target="togglableElement" class="d-none">
    <button data-action="click->toggle#fire" class="btn btn-outline-primary">Add a new piece</button>
    <%= render "form", piece: @piece %>
  </div>
</div>


<%= link_to 'sign out', destroy_user_session_path, data: { turbo_method: :delete } %>
