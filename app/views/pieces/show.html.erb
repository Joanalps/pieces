<div class="banner">
</div>

<div>

  <h1><%= @piece.name %></h1>

  <ul>
    <li><%= @piece.description %></li>
    <li><%= @piece.price_per_day %></li>
    <li><%= @piece.user.email %></li>
  </ul>


  <% if current_user && current_user.id == @piece.user_id %>
    <p>Transactions : </p>

    <% @piece.transactions.each do |transaction|%>
      <li><%= transaction.start_date %></li>
      <li><%= transaction.end_date %></li>
      <li><%= transaction.total_price%>â‚¬</li>
    <% end %>

    <%= link_to "Add another piece", new_piece_path %>
    <%= link_to "See my closet", profile_path %>
    <%= link_to "Edit my piece", new_piece_path %>

    <div>
      <i class="fa-solid fa-trash"></i>
      <%= link_to "Delete",
        piece_path(@piece),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class:"text-black"
        %>
    </div>
  <% else %>
    <%= link_to "Book this piece", new_piece_transaction_path(@piece) %>
  <% end %>

</div>
