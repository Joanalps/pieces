<div class="modal fade" id="modalNewPiece" tabindex="-1" aria-labelledby="modalNewPieceLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modalNewPieceLabel">New piece to rent ðŸ‘– </h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= turbo_frame_tag :new_piece do %>
        <%= simple_form_for(Piece.new) do |f| %>
